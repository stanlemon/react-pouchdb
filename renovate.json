{
  "extends": [
    "config:base",
    "group:allNonMajor"
  ],
  "rangeStrategy": "bump",
  "schedule": [
    "after 8am and before 5pm on Thursday"
  ],
  "packageRules": [
    {
      "packageNames": [
        "node"
      ],
      "enabled": false
    },
    {
      "matchUpdateTypes": [
        "minor",
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true
    }
  ]
}